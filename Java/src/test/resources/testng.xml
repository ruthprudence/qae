<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web Testing Suite" parallel="tests" thread-count="2">
    <parameter name="browser" value="chrome"/>
    
    <!-- Cucumber Tests -->
    <test name="Cucumber Tests">
        <classes>
            <class name="com.rankinggame.runners.TestRunner"/>
        </classes>
    </test>
    
    <!-- TestNG Tests -->
    <test name="Login Tests">
        <classes>
            <class name="com.rankinggame.testcases.LoginTest"/>
        </classes>
    </test>
    
    <test name="Home Page Tests">
        <classes>
            <class name="com.rankinggame.testcases.HomePageTest"/>
        </classes>
    </test>
    
    <!-- Cross Browser Testing Example -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.rankinggame.testcases.LoginTest"/>
        </classes>
    </test>
</suite>